<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="consorsbank.controllers.MainController">
    <top>
        <VBox>
            <Label text="ConsorsBank Dashboard" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ToolBar fx:id="toolbar" />
        </VBox>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="btnLoadMarketData" text="Load Market Data" />
            <Pane fx:id="chartContainer" prefHeight="300" /> <!-- Platzhalter fÃ¼r das Chart -->
            <TableView fx:id="marketDataTable">
                <columns>
                    <TableColumn fx:id="columnField" text="Field" />
                    <TableColumn fx:id="columnValue" text="Value" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <TextArea fx:id="txtOutput" prefHeight="100" />
    </bottom>
</BorderPane>
