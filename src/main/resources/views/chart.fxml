<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="consorsbank.controllers.ChartController">
    <!-- Top-Bereich: Toolbar -->
    <top>
        <ToolBar fx:id="toolbar">
            <ComboBox fx:id="chartTypeDropdown" promptText="Select Chart Type" />
        </ToolBar>
    </top>

    <!-- Center-Bereich: Platzhalter für Diagramm -->
    <center>
        <Pane fx:id="chartContainer" prefHeight="400" prefWidth="600" style="-fx-border-color: black;" />
    </center>

    <!-- Bottom-Bereich: TextArea für Statusnachrichten -->
    <bottom>
        <TextArea fx:id="txtOutput" prefHeight="100" />
    </bottom>
</BorderPane>
